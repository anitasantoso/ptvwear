<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="as.com.au.ptvwear.TimetableActivity"
    android:background="@color/black_70_fill">

    <com.lylc.widget.circularprogressbar.example.CircularProgressBar
        android:id="@+id/circular_progress_bar"
        style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        app:progressColor="@color/ptv_green"
        app:backgroundColor="@color/ptv_gray"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:prgBarTitle="00:00"
        app:prgBarSubtitle="Loading..." />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circular_progress_bar"
        android:id="@+id/timetable_list_view" />
</RelativeLayout>